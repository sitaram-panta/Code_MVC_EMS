@model List<Employee>
@{
    Layout = null;
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<body class="bg-light min-vh-100">
    <div class="container text-center">
        <img src="/Img/ant.png" class="img-fluid mb-4" alt="Error Image" style="max-width: 200px;">
        <h1 class="display-4">Oops! Something went wrong.</h1>
        <p class="lead">
            We apologize for the inconvenience. Our team has been notified, and we are working to fix the issue. Please try again later.
        </p>
